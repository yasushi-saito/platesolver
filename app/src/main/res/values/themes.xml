<resources>
    <!-- Base application theme. -->
    <style name="Theme.PlateSolver" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="textColor">@color/black</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorAccent">@color/secondaryDark</item>

        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <style name="RegularButton" parent="Theme.PlateSolver">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="HeaderText" parent="android:Widget.TextView">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="BodyText" parent="android:Widget.TextView">
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>
</resources>
